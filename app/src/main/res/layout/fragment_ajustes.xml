<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ajustes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="305dp"

        android:layout_height="146dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/contenedor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/ppm"
            android:layout_width="180dp"
            android:layout_height="29dp"
            android:layout_marginStart="36dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="Nombre"
            android:textColor="#44F1BD"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mp" />

        <TextView
            android:id="@+id/mp"
            android:layout_width="125dp"
            android:layout_height="19dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="4040mp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email"
            android:layout_width="182dp"
            android:layout_height="22dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="44dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="Correo@gmail.com"
            android:textColor="@color/letra1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/id"
            android:layout_width="182dp"
            android:layout_height="22dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="ID: 234123432342"
            android:textColor="@color/letra1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="166dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_extrabold"
        android:gravity="center"
        android:text="Estadisticas"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView144"
        android:layout_width="310dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/botonrojo"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:onClick="crearcuenta"
        android:text="Cambiar contraseÃ±a"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:layout_width="305dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/botonverder"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:onClick="cerrarSesion"
        android:text="Cerrar sesion"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView144" />

</androidx.constraintlayout.widget.ConstraintLayout>